{
  "name": "alexmasterov/booking-tdd-demo",
  "description": "Look, no Mocks! Functional TDD with PHP",
  "license": "MIT",
  "authors": [{
    "name": "Alex Masterov",
    "email": "alex.masterow@gmail.com"
  }],
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "serve": "php -S 127.0.0.1:80 -t public/",
    "sqlite": "php bin/sqlite",
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "Booking\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Booking\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "7.1 - 7.2",
    "http-interop/http-factory-diactoros": "^0.3",
    "http-interop/response-sender": "^1.0",
    "josegonzalez/dotenv": "^3.0",
    "rdlowrey/auryn": "^1.4",
    "shadowhand/cairon": "^0.1",
    "shadowhand/either-way": "^1.0",
    "symfony/config": "^3.3",
    "symfony/dependency-injection": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2"
  }
}
